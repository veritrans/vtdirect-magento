<?xml version="1.0"?>
<config>
  <sections>
    <payment>
      <groups>
        <bcava translate="label comment" module="bcava">
          <label>Veritrans BCA Virtual Account</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
                <active translate="label">
                  <label>Enabled</label>
                  <config_path>payment/bcava/active</config_path>
                  <frontend_type>select</frontend_type>
                  <source_model>adminhtml/system_config_source_yesno</source_model>
                  <sort_order>1</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>0</show_in_store>
                </active>                
                <title translate="label">
                  <label>Title</label>
                  <config_path>payment/bcava/title</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>2</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                </title>
                <server_key_v2>
                  <label>Server Key</label>
                  <config_path>payment/bcava/server_key_v2</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>8</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                </server_key_v2>
                <environment>
                  <label>Environment</label>
                  <config_path>payment/bcava/environment</config_path>
                  <frontend_type>select</frontend_type>
                  <source_model>bcava/system_config_source_api_environment</source_model>
                  <sort_order>9</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                  <comment>Change to 'Production' once your store is going live</comment>
                </environment>
                <conversion_rate>
                  <label>Conversion rate</label>
                  <config_path>payment/bcava/conversion_rate</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>10</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>1</show_in_store>
                  <comment>Current rate to idr</comment>
                </conversion_rate>    
                <sort_order>
                  <label>Sort Order</label>
                  <config_path>payment/bcava/sort_order</config_path>
                  <frontend_type>text</frontend_type>
                  <sort_order>27</sort_order>
                  <show_in_default>1</show_in_default>
                  <show_in_website>1</show_in_website>
                  <show_in_store>0</show_in_store>
                </sort_order>                                     
          </fields>
        </bcava>
      </groups>
    </payment>
  </sections>
</config>